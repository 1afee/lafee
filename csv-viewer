    <div class="container">
        <div class="header">
            <h1>üìä CSVË°®Á§∫„Ç¢„Éó„É™</h1>
        </div>

        <div class="upload-section">
            <div class="file-input-wrapper">
                <input type="file" id="csvFile" accept=".csv,.txt">
                <label for="csvFile" class="file-input-label">
                    üìÅ CSV„Éï„Ç°„Ç§„É´„ÇíÈÅ∏Êäû
                </label>
            </div>
            <div class="file-name" id="fileName">„Éï„Ç°„Ç§„É´„ÅåÈÅ∏Êäû„Åï„Çå„Å¶„ÅÑ„Åæ„Åõ„Çì</div>
            
            <div class="encoding-section">
                <label for="encoding">ÊñáÂ≠ó„Ç®„É≥„Ç≥„Éº„Éá„Ç£„É≥„Ç∞:</label>
                <select id="encoding">
                    <option value="UTF-8">UTF-8</option>
                    <option value="Shift_JIS" selected>Shift_JIS (Êó•Êú¨Ë™ûWindows)</option>
                    <option value="EUC-JP">EUC-JP</option>
                    <option value="ISO-2022-JP">ISO-2022-JP</option>
                </select>
            </div>
        </div>

        <div class="error-message" id="errorMessage"></div>

        <div class="table-info" id="tableInfo">
            <span id="rowCount"></span>
            <span id="columnCount"></span>
        </div>

        <div class="search-section" id="searchSection">
            <input type="text" class="search-input" id="searchInput" placeholder="üîç „ÉÜ„Éº„Éñ„É´ÂÜÖ„ÇíÊ§úÁ¥¢...">
        </div>

        <div class="action-buttons" id="actionButtons" style="display: flex;">
            <button class="edit-btn" id="editBtn">‚úèÔ∏è Á∑®ÈõÜ„É¢„Éº„Éâ</button>
            <button class="add-row-btn" id="addRowBtn" style="display: none;">‚ûï Ë°å„ÇíËøΩÂä†</button>
            <button class="save-btn" id="saveBtn" style="display: none;">üíæ ‰øùÂ≠ò</button>
            <button class="cancel-btn" id="cancelBtn" style="display: none;">‚ùå „Ç≠„É£„É≥„Çª„É´</button>
        </div>

        <div class="table-container" id="tableContainer">
            <div class="empty-state">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10 9 9 9 8 9"></polyline>
                </svg>
                <p>CSV„Éï„Ç°„Ç§„É´„ÇíÈÅ∏Êäû„Åô„Çã„Å®„ÄÅ„Åì„Åì„Å´Ë°®„ÅåË°®Á§∫„Åï„Çå„Åæ„Åô</p>
            </div>
        </div>
    </div>

    <script>
        let allRows = [];
        let isEditMode = false;
        let originalRows = [];
        let currentFileName = '';
        
        document.getElementById('csvFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                currentFileName = file.name;
                document.getElementById('fileName').textContent = file.name;
                loadCSV(file);
            }
        });

        document.getElementById('encoding').addEventListener('change', function() {
            const fileInput = document.getElementById('csvFile');
            if (fileInput.files[0]) {
                loadCSV(fileInput.files[0]);
            }
        });

        document.getElementById('searchInput').addEventListener('input', function(e) {
            if (!isEditMode) {
                filterTable(e.target.value);
            }
        });

        // Á∑®ÈõÜ„É¢„Éº„Éâ„Éú„Çø„É≥
        document.getElementById('editBtn').addEventListener('click', function() {
            enterEditMode();
        });

        // „Ç≠„É£„É≥„Çª„É´„Éú„Çø„É≥
        document.getElementById('cancelBtn').addEventListener('click', function() {
            exitEditMode();
        });

        // ‰øùÂ≠ò„Éú„Çø„É≥
        document.getElementById('saveBtn').addEventListener('click', function() {
            saveCSV();
        });

        // Ë°åËøΩÂä†„Éú„Çø„É≥
        document.getElementById('addRowBtn').addEventListener('click', function() {
            addNewRow();
        });

        function loadCSV(file) {
            const encoding = document.getElementById('encoding').value;
            const reader = new FileReader();

            reader.onload = function(e) {
                try {
                    const text = e.target.result;
                    parseCSV(text);
                    document.getElementById('errorMessage').style.display = 'none';
                } catch (error) {
                    showError('CSV„Éï„Ç°„Ç§„É´„ÅÆË™≠„ÅøËæº„Åø„Å´Â§±Êïó„Åó„Åæ„Åó„Åü: ' + error.message);
                }
            };

            reader.onerror = function() {
                showError('„Éï„Ç°„Ç§„É´„ÅÆË™≠„ÅøËæº„Åø„Å´Â§±Êïó„Åó„Åæ„Åó„Åü');
            };

            reader.readAsText(file, encoding);
        }

        function parseCSV(text) {
            const lines = text.split(/\r?\n/).filter(line => line.trim());
            
            if (lines.length === 0) {
                showError('CSV„Éï„Ç°„Ç§„É´„ÅåÁ©∫„Åß„Åô');
                return;
            }

            const rows = lines.map(line => {
                const result = [];
                let current = '';
                let inQuotes = false;
                
                for (let i = 0; i < line.length; i++) {
                    const char = line[i];
                    
                    if (char === '"') {
                        if (inQuotes && line[i + 1] === '"') {
                            current += '"';
                            i++;
                        } else {
                            inQuotes = !inQuotes;
                        }
                    } else if (char === ',' && !inQuotes) {
                        result.push(current.trim());
                        current = '';
                    } else {
                        current += char;
                    }
                }
                result.push(current.trim());
                return result;
            });

            allRows = rows;
            originalRows = JSON.parse(JSON.stringify(rows));
            displayTable(rows);
        }

        function displayTable(rows) {
            const tableContainer = document.getElementById('tableContainer');
            const tableInfo = document.getElementById('tableInfo');
            const searchSection = document.getElementById('searchSection');
            const actionButtons = document.getElementById('actionButtons');
            
            if (rows.length === 0) {
                tableContainer.innerHTML = '<div class="empty-state"><p>„Éá„Éº„Çø„Åå„ÅÇ„Çä„Åæ„Åõ„Çì</p></div>';
                return;
            }

            const headers = rows[0];
            const dataRows = rows.slice(1);

            let html = '<table id="dataTable"><thead><tr>';
            if (isEditMode) {
                html += '<th style="width: 80px;">Êìç‰Ωú</th>';
            }
            headers.forEach(header => {
                html += `<th>${escapeHtml(header)}</th>`;
            });
            html += '</tr></thead><tbody>';

            dataRows.forEach((row, rowIndex) => {
                html += '<tr data-row-index="' + rowIndex + '">';
                if (isEditMode) {
                    html += '<td><button class="delete-btn" onclick="deleteRow(' + rowIndex + ')">üóëÔ∏è ÂâäÈô§</button></td>';
                }
                row.forEach((cell, cellIndex) => {
                    if (isEditMode) {
                        html += `<td class="editable" data-row="${rowIndex}" data-col="${cellIndex}" onclick="editCell(this)">${escapeHtml(cell)}</td>`;
                    } else {
                        html += `<td>${escapeHtml(cell)}</td>`;
                    }
                });
                html += '</tr>';
            });

            html += '</tbody></table>';
            tableContainer.innerHTML = html;
            tableContainer.style.display = 'block';
            
            if (isEditMode) {
                tableContainer.querySelector('table').classList.add('edit-mode');
            }
            
            document.getElementById('rowCount').textContent = `Ë°åÊï∞: ${dataRows.length}`;
            document.getElementById('columnCount').textContent = `ÂàóÊï∞: ${headers.length}`;
            tableInfo.style.display = 'block';
            searchSection.style.display = 'block';
            actionButtons.style.display = 'flex';
        }

        function enterEditMode() {
            isEditMode = true;
            originalRows = JSON.parse(JSON.stringify(allRows));
            
            document.getElementById('editBtn').style.display = 'none';
            document.getElementById('addRowBtn').style.display = 'inline-block';
            document.getElementById('saveBtn').style.display = 'inline-block';
            document.getElementById('cancelBtn').style.display = 'inline-block';
            document.getElementById('searchInput').disabled = true;
            document.getElementById('searchInput').value = '';
            
            displayTable(allRows);
        }

        function exitEditMode() {
            isEditMode = false;
            allRows = JSON.parse(JSON.stringify(originalRows));
            
            document.getElementById('editBtn').style.display = 'inline-block';
            document.getElementById('addRowBtn').style.display = 'none';
            document.getElementById('saveBtn').style.display = 'none';
            document.getElementById('cancelBtn').style.display = 'none';
            document.getElementById('searchInput').disabled = false;
            
            displayTable(allRows);
        }

        function editCell(td) {
            if (td.classList.contains('editing')) return;
            
            const rowIndex = parseInt(td.dataset.row);
            const colIndex = parseInt(td.dataset.col);
            const currentValue = allRows[rowIndex + 1][colIndex];
            
            td.classList.add('editing');
            td.innerHTML = `<input type="text" value="${escapeHtml(currentValue)}" autofocus>`;
            
            const input = td.querySelector('input');
            input.focus();
            input.select();
            
            input.addEventListener('blur', function() {
                saveCell(td, rowIndex, colIndex, this.value);
            });
            
            input.addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    this.blur();
                } else if (e.key === 'Escape') {
                    td.classList.remove('editing');
                    td.textContent = currentValue;
                }
            });
        }

        function saveCell(td, rowIndex, colIndex, value) {
            allRows[rowIndex + 1][colIndex] = value;
            td.classList.remove('editing');
            td.textContent = value;
        }

        function deleteRow(rowIndex) {
            if (confirm('„Åì„ÅÆË°å„ÇíÂâäÈô§„Åó„Åæ„Åô„ÅãÔºü')) {
                allRows.splice(rowIndex + 1, 1);
                displayTable(allRows);
            }
        }

        function addNewRow() {
            const columnCount = allRows[0].length;
            const newRow = new Array(columnCount).fill('');
            allRows.push(newRow);
            displayTable(allRows);
            
            setTimeout(() => {
                const tableContainer = document.getElementById('tableContainer');
                tableContainer.scrollTop = tableContainer.scrollHeight;
            }, 100);
        }

        function saveCSV() {
            const csvContent = allRows.map(row => {
                return row.map(cell => {
                    const cellStr = String(cell);
                    if (cellStr.includes(',') || cellStr.includes('"') || cellStr.includes('\n')) {
                        return '"' + cellStr.replace(/"/g, '""') + '"';
                    }
                    return cellStr;
                }).join(',');
            }).join('\n');
            
            const encoding = document.getElementById('encoding').value;
            const blob = new Blob([csvContent], { type: 'text/csv;charset=' + encoding });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            
            const baseName = currentFileName.replace(/\.[^/.]+$/, '');
            a.href = url;
            a.download = baseName + '_edited.csv';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            originalRows = JSON.parse(JSON.stringify(allRows));
            alert('CSV„Éï„Ç°„Ç§„É´„Çí‰øùÂ≠ò„Åó„Åæ„Åó„ÅüÔºÅ');
        }

        function filterTable(searchTerm) {
            if (!searchTerm) {
                displayTable(allRows);
                return;
            }

            const term = searchTerm.toLowerCase();
            const headers = allRows[0];
            const filteredRows = [headers];

            for (let i = 1; i < allRows.length; i++) {
                const row = allRows[i];
                const rowText = row.join(' ').toLowerCase();
                if (rowText.includes(term)) {
                    filteredRows.push(row);
                }
            }

            displayTable(filteredRows);
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
            document.getElementById('tableContainer').style.display = 'none';
            document.getElementById('tableInfo').style.display = 'none';
            document.getElementById('searchSection').style.display = 'none';
            document.getElementById('actionButtons').style.display = 'none';
        }
    </script>
</body>
</html>
